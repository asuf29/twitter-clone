<div class="flex justify-center items-center w-full min-h-screen bg-gray-100">
  <ul class="flex flex-wrap justify-center gap-6 bg-white rounded-lg shadow-lg">
    <% @users.each do |user| %>
      <li class="flex items-center bg-gray-50 border border-gray-300 rounded-lg p-4 shadow-md w-80">
        <div class="w-16 h-16 rounded-full overflow-hidden mr-4">
          <%= image_tag "asuf.jpeg", class: "w-full h-full object-cover" %>
        </div>
        <p class="text-lg font-bold text-gray-700"><%= user.username %></p>
      </li>
    <% end %>
  </ul>
</div>
