<div class="flex justify-center items-center w-full p-4 bg-gray-100">
  <ul class="flex flex-col justify-center gap-6 rounded-lg shadow-lg">
    <% @users.each do |user| %>
      <li class="flex items-center bg-gray-50 border border-gray-300 rounded-lg p-4 shadow-md w-80">
        <div class="w-16 h-16 rounded-full overflow-hidden mr-4">
          <% if user.profile_picture.attached? %>
            <%= image_tag user.profile_picture %>
          <% else %>
            <p>No profile picture available.</p>
          <% end %>
        </div>
        <div class="flex flex-col">
          <h2 class="text-xl font-bold text-gray-800"><%= "#{user.first_name} #{user.last_name}"%></h2>
          <p class="text-sm text-gray-400"><%= user.username %></p>
        </div>
      </li>
    <% end %>
  </ul>
</div>
