<div class="w-full flex flex-col items-center">
  <div class="flex flex-col w-full max-w-3xl justify-center items-center bg-gray-100 p-4 rounded-lg shadow-md">
    <div class="flex flex-col items-center w-full bg-white rounded-lg shadow-md p-6 mb-6">
      <%# <div class="w-24 h-24 rounded-full overflow-hidden mb-4">
        <%= image_tag @user.profile_picture || "default-profile.png", class: "w-full h-full object-cover" %>
      <%# </div> %> 
      <h1 class="text-2xl font-bold text-gray-800"><%= @user.username %></h1>
    </div>

    <div class="w-full bg-white rounded-lg shadow-md p-4">
      <h2 class="text-lg font-semibold text-gray-800 mb-4">Tweets by <%= @user.username %></h2>
      <ul class="space-y-4">
        <% @tweets.each do |tweet| %>
          <li class="border-b border-gray-200 pb-4">
            <p class="text-gray-700"><%= tweet.body %></p>
            <p class="text-sm text-gray-500 mt-2">Posted at: <%= tweet.created_at.strftime("%d %b %Y, %H:%M") %></p>
          </li>
        <% end %>
      </ul>
      <% if @tweets.empty? %>
        <p class="text-gray-500 text-center mt-4">This user hasn't posted any tweets yet.</p>
      <% end %>
    </div>
  </div>

</div>