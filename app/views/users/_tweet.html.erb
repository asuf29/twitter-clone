<li class="border-b border-gray-200 pb-4">
	<p class="text-gray-700"><%= tweet.body %></p>
	<p class="text-sm text-gray-500 mt-2">Posted at: <%= tweet.created_at.strftime("%d %b %Y, %H:%M") %></p>
	<div class="flex justify-end mt-2">
		<%= link_to tweet_path(tweet), data: {
			turbo_method: :delete,
			turbo_confirm: "Are you sure you want to delete this tweet?"
		} do %>
			<%= image_tag("trash-icon.svg", class: "h-5 w-5 mr-2") %>
		<% end %>
		<%= link_to edit_tweet_path(tweet) do %>
			<%= image_tag("edit-icon.svg", class: "h-5 w-5 mr-2") %>
		<% end %>
	</div>
</li>
