<div class="flex justify-center items-center min-h-screen bg-gray-50 mx-auto">
  <div class="w-full max-w-2xl bg-white p-6 rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold text-gray-800 text-center mb-6">Edit Profile</h1>
    <%= form_with model: @user, local: true do |form| %>
      <div class="mb-6 flex flex-col items-center">
        <% if @user.profile_picture.attached? %>
          <div class="mb-4">
            <%= image_tag @user.profile_picture, class: "w-28 h-28 rounded-full shadow-md object-cover" %>
          </div>
          <p class="text-sm text-gray-600">Change your profile picture</p>
        <% else %>
          <p class="text-sm text-gray-600 mb-4">No profile picture uploaded.</p>
          <p class="text-sm text-gray-600">Upload a profile picture:</p>
        <% end %>
        <div class="flex justify-center">
          <%= form.file_field :profile_picture, class: "mt-2  text-sm file:mr-4 file:ml-8 file:py-2 file:px-4 file:rounded-full file:border file:border-gray-300 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
        </div>
      </div>

      <div class="mb-4">
        <%= form.label :email, "Email", class: "block font-medium text-gray-700 mb-1" %>
        <%= form.text_field :email, value: @user.email, class: "block w-full border border-gray-300 rounded-lg p-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="mb-4">
        <%= form.label :first_name, "First Name", class: "block font-medium text-gray-700 mb-1" %>
        <%= form.text_field :first_name, value: @user.first_name, class: "block w-full border border-gray-300 rounded-lg p-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="mb-4">
        <%= form.label :last_name, "Last Name", class: "block font-medium text-gray-700 mb-1" %>
        <%= form.text_field :last_name, value: @user.last_name, class: "block w-full border border-gray-300 rounded-lg p-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="mb-4">
        <%= form.label :username, "Username", class: "block font-medium text-gray-700 mb-1" %>
        <%= form.text_field :username, value: @user.username, class: "block w-full border border-gray-300 rounded-lg p-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="flex justify-end">
        <%= form.submit "Update", class: "bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition duration-200" %>
      </div>
    <% end %>
  </div>
</div>
