<div class="flex flex-col w-full mt-16">
    <% menu_items =[ 
        { name: "Home", path: root_path, icon: "home-icon.svg" },
        { name: "Explore", path: root_path, icon: "explore-icon.svg" },
        { name: "Notifications", path: root_path, icon: "notifications-icon.svg" },
        { name: "Messages", path: root_path, icon: "messages-icon.svg" },
        { name: "Bookmarks", path: root_path, icon: "bookmarks-icon.svg" },
        { name: "User List", path: users_path, icon: "users-icon.svg" },
        { name: "Profile", path: root_path, icon: "profile-icon.svg" },
        { name: "More", path: root_path, icon: "more-icon.svg" },
    ] %>
    
    <% menu_items.each do |item| %>
        <%= link_to item[:path], class: "flex items-center p-2 rounded-lg hover:bg-blue-100 transition duration-200 mb-2" do %>
            <%= image_tag item[:icon], class: "w-6 h-6" %>
            <p class="text-gray-800 text-md font-medium ml-3"><%= item[:name] %></p>
        <% end %>
    <% end %>
</div>