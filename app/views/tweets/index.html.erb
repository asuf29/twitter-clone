<div class="grid grid-cols-12 gap-4 w-full p-4">
    <div class="col-span-3 bg-gray-100 p-4 rounded-xl shadow-md">
        <%= render "sidebar" %>
    </div>

    <div class="col-span-6 bg-gray-100 p-4 rounded-xl shadow-md">
        <div class="flex justify-between mb-4">
            <h1 class="text-3xl text-blue-600 font-bold">Tweets</h1>
            <%= link_to "New", new_tweet_path, class: "px-4 py-2 bg-blue-600 text-white text-xl rounded-xl" %>
        </div>
        <ul class="space-y-4">
            <% @tweets.each do |tweet| %>
                <%= render "tweet", tweet: tweet %>
            <% end %>
        </ul>
    </div>

    <div class="col-span-3 bg-gray-100 p-4 rounded-xl shadow-md">
        <h2 class="text-lg font-bold text-gray-700">Explore</h2>
        <p class="text-gray-600 mt-2">Coming soon...</p>
    </div>
</div>
