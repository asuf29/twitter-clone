<div class="flex flex-col w-full justify-center items-center">
    <div class="flex justify-between w-6/12">
        <h1 class="text-3xl text-blue-600 font-bold">Tweets</h1>
        <%= link_to "New", new_tweet_path, class: "px-4 py-2 bg-blue-600 text-white text-xl rounded-xl" %>
    </div>
    <div class="mt-4 bg-gray-100 w-6/12 p-4 rounded-xl shadow-md">
        <ul class="space-y-4">
            <% @tweets.each do |tweet| %>
                <li class="p-4 bg-white rounded-lg shadow-md">
                    <div class="flex justify-between items-center mb-2">
                        <%= link_to tweet.user.username, new_tweet_path, class: "font-bold text-lg" %>
                        <small class="text-gray-500 text-sm">
                            <%= tweet.created_at.strftime("%b %d, %Y") %>
                        </small>
                    </div>
                    <p class="text-gray-800"><%= tweet.body %></p>
                </li>
            <% end %> 
        </ul>
    </div>
</div>