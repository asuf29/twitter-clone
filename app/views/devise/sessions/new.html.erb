<div class="flex flex-col justify-center items-center w-full">
  <h2 class="text-3xl text-center font-semibold mb-6 ">Log in</h2>

  <div class="items-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: 'block text-sm font-medium text-gray-700' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'p-3 w-full border border-gray-300 rounded-md' %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: 'block text-sm font-medium text-gray-700' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'p-3 w-full border border-gray-300 rounded-md' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: 'w-full py-3 mb-2 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700' %>
    </div>
  <% end %>
  </div>

  <%= render "devise/shared/links"%>

</div>